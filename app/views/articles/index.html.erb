<h1>Listing of all articles</h1>
<h3><%= link_to 'Create a new article', new_article_path %></h3>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |a| %> 
    <tr>
      <td><%= a.title %></td>
      <td><%= a.description %></td>
      <td>
        <%= link_to 'Show', article_path(a) %> | 
        <%= link_to 'Edit', edit_article_path(a) %> | 
        <%= link_to 'Destroy', article_path(a), method: :delete, data:{confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
</table>

